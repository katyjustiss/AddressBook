h1 Address Book
.search
  label Search
  input(placeholder="Enter term here", ng-model="query")
.contact-entry
  a.btn.btn-primary(href="#/people/new") Enter New Contact
.gallery
  .person(ng-repeat="(id, person) in main.people | objToArr | orderBy:'name' | filter:query")
    a(href="/#/people/{{person._id}}")
      img(ng-src="{{person.photo}}")
